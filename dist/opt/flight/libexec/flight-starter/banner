#!/bin/bash
cluster=$1
version=$2
distro=$3

c_version="[1;37;40m${version:-OpenFlight r2019.2}[0m"
j_version="${version:-OpenFlight r2019.2}"
if [ "$distro" ]; then
  c_distro="[1;37;40mBased on $distro[0m"
  j_distro="Based on $distro"
fi
if [ -z "${cluster}" -o "${cluster}" == "Unconfigured" ]; then
  cluster="OpenFlight"
fi
j_welcome="$(printf %-33.33s "Welcome to $cluster")"

frame() {
  col=$((159-$1))
  if [ "$col" -lt 154 ]; then
      esc="1;32"
  else
    esc="1;38;5;$col"
  fi
  welcome="$(printf %-$((46+${#esc})).$((46+${#esc}))s "[1;37;40mWelcome to [${esc}m${cluster}")"
  c1="[38;2;0;151;223m"
  c2="[38;2;174;225;249m"
  c3="[38;2;204;221;238m"
  
  cat | sed -e "s#%WELCOME%#$welcome[0m#g" \
            -e "s#%VERSION%#$c_version#g" \
            -e "s#%DISTRO%#$c_distro#g" \
            -e "s#%1%#${c1}#g" \
            -e "s#%2%#${c2}#g" \
            -e "s#%3%#${c3}#g"
}

plain_static_frame() {
  sed -e "s#%WELCOME%#$j_welcome#g" \
      -e "s#%VERSION%#$j_version#g" \
      -e "s#%DISTRO%#$j_distro#g" <<'EOF'
                                   __ _ _       _     _  ==>
   ==>                            / _| (_)     | |   | |  ==>
  ==>   ___   _ __    ___  _ __  | |_| |_  __ _| |__ | |_  ==>
 ==>   / _ \ | '_ \  / _ \| '_ \ |  _| | |/ _` | '_ \| __|  ==>
==>   | (_) || |_) ||  __/| | | || | | | | (_| | | | | |_    ==>
 ==>   \___/ | .__/  \___||_| |_||_| |_|_|\__, |_| |_|\__|  ==>
  ==>        |_|                           __/ |           ==>
   ==>  %WELCOME% |___/           ==>
    ==>  %VERSION%
     ==>  %DISTRO%
EOF
}

static_frame() {
  if [[ "$TERM" != "xterm"* ]]; then
    plain_static_frame
    exit
  fi
  frame 6 <<'EOF'
      %1%                             %2%__ _ _       _     _  %3%==>
   %3%==>%1%                           %2% / _| (_)     | |   | |  %3%==>
  %3%==>%1%   ___   _ __    ___  _ __  %2%| |_| |_  __ _| |__ | |_  %3%==>
 %3%==>%1%   / _ \ | '_ \  / _ \| '_ \ %2%|  _| | |/ _` | '_ \| __|  %3%==>
%3%==>%1%   | (_) || |_) ||  __/| | | |%2%| | | | | (_| | | | | |_    %3%==>
 %3%==>%1%   \___/ | .__/  \___||_| |_|%2%|_| |_|_|\__, |_| |_|\__|  %3%==>
  %3%==>%1%        |_|                 %2%          __/ |           %3%==>
   %3%==>  %WELCOME%%2% |___/           %3%==>
    %3%==>  %VERSION%
     %3%==>  %DISTRO%
EOF
}

final_frame() {
  echo '[11A'
  static_frame
}

delay() {
  if read -t0 -N0 -s; then
    final_frame
    exit 0
  else
    sleep $1
  fi
}

cleanup() {
  stty "$oldstty"
  if [ "$1" == "force" ]; then
    final_frame
    exit
  fi
}

if [ -f "$HOME/.config/flight/settings.rc" ]; then
  . "$HOME/.config/flight/settings.rc"
  (
      grep -v "^flight_STARTER_static_banner=" "$HOME/.config/flight/settings.rc"
      echo "flight_STARTER_static_banner=true"
  ) > "$HOME"/.config/flight/settings.rc.new
  mv "$HOME"/.config/flight/settings.rc.new "$HOME"/.config/flight/settings.rc
elif [ "$HOME" ]; then
  mkdir -p "$HOME/.config/flight"
  cat <<EOF > "$HOME/.config/flight/settings.rc"
################################################################################
##
## Alces Flight - Shell configuration file
## Copyright (c) 2019 Alces Flight Ltd
##
################################################################################
flight_STARTER_static_banner=true
EOF
else
  static_frame
  exit
fi

if [ "${flight_STARTER_force_animate_banner}" != "true" -a "${flight_STARTER_static_banner:-false}" == "true" ]; then
  static_frame
  exit
elif [[ "$TERM" != "xterm"* ]]; then
  plain_static_frame
  exit
fi

oldstty="$(stty -g)"
trap cleanup EXIT
trap "cleanup force" INT TERM
stty -icanon -echo min 1 time 0
frame 0 <<'EOF'
                                 %3%==>
   %3%==>                            %3%==>
  %3%==>%1%   ___   _ __    ___  _ __    %3%==>
 %3%==>%1%   / _ \ | '_ \  / _ \| '_ \    %3%==>
%3%==>%1%   | (_) || |_) ||  __/| | | |    %3%==>
 %3%==>%1%   \___/ | .__/  \___||_| |_|   %3%==>
  %3%==>%1%        |_|                   %3%==>
   %3%==>  %WELCOME%
    %3%==>  %VERSION%
     %3%==>  %DISTRO%
EOF
delay 0.05
echo "[11A"

frame 1 <<'EOF'
      %1%                             %2%__%3%==>
   %3%==>%1%                            %2%/ _|%3%==>
  %3%==>%1%   ___   _ __    ___  _ __  %2%| |_  %3%==>
 %3%==>%1%   / _ \ | '_ \  / _ \| '_ \ %2%|  _|  %3%==>
%3%==>%1%   | (_) || |_) ||  __/| | | |%2%| |     %3%==>
 %3%==>%1%   \___/ | .__/  \___||_| |_|%2%|_|    %3%==>
  %3%==>%1%        |_|                       %3%==>
   %3%==>  %WELCOME%
    %3%==>  %VERSION%
     %3%==>  %DISTRO%
EOF
delay 0.05
echo "[11A"

frame 1 <<'EOF'
      %1%                             %2%__ _%3%==>
   %3%==>%1%                            %2%/ _| |%3%==>
  %3%==>%1%   ___   _ __    ___  _ __  %2%| |_| | %3%==>
 %3%==>%1%   / _ \ | '_ \  / _ \| '_ \ %2%|  _| |  %3%==>
%3%==>%1%   | (_) || |_) ||  __/| | | |%2%| | | |   %3%==>
 %3%==>%1%   \___/ | .__/  \___||_| |_|%2%|_| |_|  %3%==>
  %3%==>%1%        |_|                         %3%==>
   %3%==>  %WELCOME%
    %3%==>  %VERSION%
     %3%==>  %DISTRO%
EOF
delay 0.05
echo "[11A"

frame 2 <<'EOF'
      %1%                             %2%__ _ _%3%==>
   %3%==>%1%                            %2%/ _| (_)%3%==>
  %3%==>%1%   ___   _ __    ___  _ __  %2%| |_| |_  %3%==>
 %3%==>%1%   / _ \ | '_ \  / _ \| '_ \ %2%|  _| | |  %3%==>
%3%==>%1%   | (_) || |_) ||  __/| | | |%2%| | | | |   %3%==>
 %3%==>%1%   \___/ | .__/  \___||_| |_|%2%|_| |_|_|  %3%==>
  %3%==>%1%        |_|                           %3%==>
   %3%==>  %WELCOME%%1% %3%==>
    %3%==>  %VERSION%
     %3%==>  %DISTRO%
EOF
delay 0.05
echo "[11A"

frame 3 <<'EOF'
      %1%                             %2%__ _ _      %3%==>
   %3%==>%1%                            %2%/ _| (_)      %3%==>
  %3%==>%1%   ___   _ __    ___  _ __  %2%| |_| |_  __ _  %3%==>
 %3%==>%1%   / _ \ | '_ \  / _ \| '_ \ %2%|  _| | |/ _` |  %3%==>
%3%==>%1%   | (_) || |_) ||  __/| | | |%2%| | | | | (_| |   %3%==>
 %3%==>%1%   \___/ | .__/  \___||_| |_|%2%|_| |_|_|\__, |  %3%==>
  %3%==>%1%        |_|                 %2%          __/ | %3%==>
   %3%==>%1%  %WELCOME%%2% |___/   %3%==>
    %3%==>%1%  %VERSION%
     %3%==>%1%  %DISTRO%
EOF
delay 0.05
echo "[11A"

frame 4 <<'EOF'
      %1%                             %2%__ _ _       _    %3%==>
   %3%==>%1%                            %2%/ _| (_)     | |    %3%==>
  %3%==>%1%   ___   _ __    ___  _ __  %2%| |_| |_  __ _| |__   %3%==>
 %3%==>%1%   / _ \ | '_ \  / _ \| '_ \ %2%|  _| | |/ _` | '_ \   %3%==>
%3%==>%1%   | (_) || |_) ||  __/| | | |%2%| | | | | (_| | | | |   %3%==>
 %3%==>%1%   \___/ | .__/  \___||_| |_|%2%|_| |_|_|\__, |_| |_|  %3%==>
  %3%==>%1%        |_|                 %2%          __/ |       %3%==>
   %3%==>  %WELCOME%%2% |___/       %3%==>
    %3%==>  %VERSION%
     %3%==>  %DISTRO%
EOF
delay 0.05
echo "[11A"

frame 5 <<'EOF'
      %1%                             %2%__ _ _       _     _  %3%==>
   %3%==>%1%                            %2%/ _| (_)     | |   | |  %3%==>
  %3%==>%1%   ___   _ __    ___  _ __  %2%| |_| |_  __ _| |__ | |_  %3%==>
 %3%==>%1%   / _ \ | '_ \  / _ \| '_ \ %2%|  _| | |/ _` | '_ \| __|  %3%==>
%3%==>%1%   | (_) || |_) ||  __/| | | |%2%| | | | | (_| | | | | |_    %3%==>
 %3%==>%1%   \___/ | .__/  \___||_| |_|%2%|_| |_|_|\__, |_| |_|\__|  %3%==>
  %3%==>%1%        |_|                 %2%          __/ |           %3%==>
   %3%==>  %WELCOME%%2% |___/           %3%==>
    %3%==>  %VERSION%
     %3%==>  %DISTRO%
EOF
delay 0.05
echo "[11A"

frame 6 <<'EOF'
      %1%                             %2%__ _ _       _     _  %3%==>
   %3%==>%1%                            %2%/ _| (_)     | |   | |  %3%==>
  %3%==>%1%   ___   _ __    ___  _ __  %2%| |_| |_  __ _| |__ | |_  %3%==>
 %3%==>%1%   / _ \ | '_ \  / _ \| '_ \ %2%|  _| | |/ _` | '_ \| __|  %3%==>
%3%==>%1%   | (_) || |_) ||  __/| | | |%2%| | | | | (_| | | | | |_    %3%==>
 %3%==>%1%   \___/ | .__/  \___||_| |_|%2%|_| |_|_|\__, |_| |_|\__|  %3%==>
  %3%==>%1%        |_|                 %2%          __/ |           %3%==>
   %3%==>  %WELCOME%%2% |___/           %3%==>
    %3%==>  %VERSION%
     %3%==>  %DISTRO%
EOF
